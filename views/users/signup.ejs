<% layout('/layouts/boilerplate') -%>
    <div class="row">
        <h1 class="col-6 offset-3">signUp for wanderlust</h1>
        <div class="col-6 offset-3 mt-3">
            <form method="post" action="/signup" class="needs-validation" novalidate>

                <div class="mb-3">
                    <label for="username" class="form-label">username</label>
                    <input name="username" placeholder="Enter username" id="username" class="form-control" type="text"
                        required>

                    <div class="valid-feedback">Looks good!</div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">email</label>
                    <input name="email" placeholder="Enter email" id="email" class="form-control" type="email" required>

                    <div class="valid-feedback">Looks good!</div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">password</label>
                    <input name="password" placeholder="Enter password" id="password" class="form-control"
                        type="password" required>

                    <div class="valid-feedback">Looks good!</div>
                </div>

                <button class="btn btn-success">submit</button>
            </form>

        </div>
    </div>