<% layout('/layouts/boilerplate') -%>

    <div class="row">

        <div class="col-8 offset-2">
            <br /><br />
            <h3>Create new listing</h3>
            <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Enter Title</label>
                    <input name="listing[title]" placeholder="Add a catchy title" id="title" type="text"
                        class="form-control" required>
                    <div class="valid-feedback">
                        Title looks good
                    </div>
                    <div class="invalid-feedback">
                        Title is required
                    </div>

                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="Enter description" id="description" type="text"
                        class="form-control" required></textarea>
                        <div class="valid-feedback">
                            Description looks good
                        </div>
                        <div class="invalid-feedback">
                           Description should be valid
                        </div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input name="listing[image]" placeholder="Upload Image" id="image" type="file"
                        class="form-control">
                        
                </div>

                <div class="row">

                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="1200" id="price" type="number" class="form-control"
                            required>
                            <div class="valid-feedback">
                               Price looks good
                            </div>
                            <div class="invalid-feedback">
                               Price should be valid
                            </div>
                    </div>

                    <div class="mb-3 col-md-8">

                        <label for="country" class="form-label">country</label>
                        <input name="listing[country]" placeholder="India" id="country" type="text" class="form-control"
                            required>
                            <div class="valid-feedback">
                                country looks good
                            </div>
                            <div class="invalid-feedback">
                                country should be valid
                            </div>

                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">location</label>
                    <input name="listing[location]" placeholder="jaipur, rajsthan" id="location" type="text"
                        class="form-control" required>
                        <div class="valid-feedback">
                            Location looks good
                        </div>
                        <div class="invalid-feedback">
                            Location should be valid
                        </div>
                </div>

                <div class="mb-3">
                    <label for="category" class="form-label">Choose Category</label>
                        <select class="form-select form-select-md" name="listing[category]" id="category">
                            <option value="">--Select a Category </option>
                            <option value="Trending">Trending</option>
                            <option value="Rooms">Rooms</option>
                            <option value="Castles">Castles</option>
                            <option value="Iconin city">Iconin city</option>
                            <option value="Mountains">Mountains</option>
                            <option value="Amazing Pools">Amazing Pools</option>
                            <option value="Camping">Camping</option>
                            <option value="Farms">Farms</option>
                            <option value="Arctic">Arctic</option>
                            <option value="Boat">Boat</option>
                        </select>
                    
                        <div class="valid-feedback">
                            category looks good
                        </div>
                        <div class="invalid-feedback">
                            category should be valid
                        </div>
                </div>


                <button class="btn btn-dark add-btn">Add</button>
            </form>
            <br />
        </div>
    </div>